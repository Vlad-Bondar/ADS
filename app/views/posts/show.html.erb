
<div class="container">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            
            <h5 class="card-title"><%= @post.header %></h5>
            <h6 class="card-subtitle mb-2 text-muted">author:<%= @post.user.user_name %></h6>
            <p class="card-text"><%= @post.body %></p>
            <a href="#" class="card-link">Ссылка карты</a>
            <a href="#" class="card-link">Другая ссылка</a>

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                        <% @post.images.each do |image| %>
                            <div class="carousel-item <%= "active" if @post.images[0] == image    %>">
                                <%= image_tag(image.index_thumb.url, alt: 'Image' , class:"rounded-top" ) if @post.images? %>
                            </div>
                        <%end%>  
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>
</div>

