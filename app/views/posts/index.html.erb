
<div class="container">
    <div class="row mt-6 my-3">
        <div class="col-lg-12 ">
            <div class="row">
                <%@posts.each do |post|%>
                    <div class="card mx-3 my-3 text-center" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= post.header %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">author:<%= post.user.user_name %></h6>
                            <p class="card-text"><%= post.body %></p>
                            <a href= "/posts/<%=post.id%>" class="card-link">Link</a>                              
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>