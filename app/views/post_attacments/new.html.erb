<%= form_for @post_attachment , url: post_attacments_path  , html: { multipart: true }, method: "post"  do |p| %>
    <div class="container">
        <h1> New category </h1>

        <div class="input-group mb-3">
           <%= p.file_field :attachment %> 
        </div>

        <div class="mt-3">
            <%= p.submit 'Create', class:"btn btn-success mb-2" %>
        </div>
    </div>
<%end%>